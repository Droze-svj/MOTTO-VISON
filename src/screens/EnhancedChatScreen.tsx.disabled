/**
 * Enhanced ChatScreen - Modern Design with All New Features
 * Features: Streaming, Emotions, Analytics, Knowledge Graph, and more!
 */

import React, { useState, useEffect, useRef } from 'react';
import {
  View,
  Text,
  TextInput,
  TouchableOpacity,
  ScrollView,
  StyleSheet,
  KeyboardAvoidingView,
  Platform,
  Animated,
  Alert,
  Dimensions,
} from 'react-native';
import LinearGradient from 'react-native-linear-gradient';

// Core Services
import MasterAIService from '../services/core/MasterAIService';
import ContextMemoryService from '../services/core/ContextMemoryService';
import VoiceIntegrationService from '../services/core/VoiceIntegrationService';

// New Advanced Services
import {
  StreamingResponseService,
  ConversationAnalyticsService,
  EmotionTrackingService,
  KnowledgeGraphService,
  ContextCompressionService,
  MultiTurnPlanningService,
  AdaptiveDifficultyService,
  ConversationBranchingService,
  InterruptionHandlerService,
  PersonalizedKnowledgeBaseService,
} from '../services/advanced';

import { modernTheme } from '../theme/modernTheme';

const { width } = Dimensions.get('window');

interface Message {
  id: string;
  role: 'user' | 'assistant' | 'system';
  content: string;
  timestamp: number;
  sources?: string[];
  confidence?: number;
  emotion?: string;
  emotionIntensity?: number;
  responseTime?: number;
  isStreaming?: boolean;
}

interface ChatScreenProps {
  userId: string;
  onOpenSettings?: () => void;
  onOpenPersonalization?: () => void;
}

export const EnhancedChatScreen: React.FC<ChatScreenProps> = ({
  userId = 'default_user',
  onOpenSettings,
  onOpenPersonalization,
}) => {
  const [messages, setMessages] = useState<Message[]>([]);
  const [inputText, setInputText] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [isListening, setIsListening] = useState(false);
  const [currentEmotion, setCurrentEmotion] = useState<string>('neutral');
  const [sessionId, setSessionId] = useState<string>('');
  const [showInsights, setShowInsights] = useState(false);
  const [activePlan, setActivePlan] = useState<any>(null);
  
  const scrollViewRef = useRef<ScrollView>(null);
  const inputRef = useRef<TextInput>(null);
  const fadeAnim = useRef(new Animated.Value(0)).current;
  const pulseAnim = useRef(new Animated.Value(1)).current;

  // Initialize services
  useEffect(() => {
    initializeServices();
  }, [userId]);

  const initializeServices = async () => {
    // Start analytics session
    const newSessionId = await ConversationAnalyticsService.startSession(userId);
    setSessionId(newSessionId);

    // Initialize user profiles
    await EmotionTrackingService.analyzeEmotion('hello', userId);
    await AdaptiveDifficultyService.initializeUser(userId);
    await KnowledgeGraphService.initializeGraph(userId);
    await ConversationBranchingService.createRootBranch(userId, 'General Chat');
    await PersonalizedKnowledgeBaseService.initializeKnowledgeBase(userId);

    // Welcome animation
    Animated.timing(fadeAnim, {
      toValue: 1,
      duration: 800,
      useNativeDriver: true,
    }).start();
  };

  // Pulse animation for AI thinking
  useEffect(() => {
    if (isLoading) {
      Animated.loop(
        Animated.sequence([
          Animated.timing(pulseAnim, {
            toValue: 1.3,
            duration: 600,
            useNativeDriver: true,
          }),
          Animated.timing(pulseAnim, {
            toValue: 1,
            duration: 600,
            useNativeDriver: true,
          }),
        ])
      ).start();
    } else {
      pulseAnim.setValue(1);
    }
  }, [isLoading]);

  // Auto-scroll to bottom
  useEffect(() => {
    if (messages.length > 0) {
      setTimeout(() => {
        scrollViewRef.current?.scrollToEnd({ animated: true });
      }, 100);
    }
  }, [messages]);

  // Send message with all new features
  const handleSend = async () => {
    if (!inputText.trim() || isLoading) return;

    const userMessage: Message = {
      id: Date.now().toString(),
      role: 'user',
      content: inputText.trim(),
      timestamp: Date.now(),
    };

    setMessages(prev => [...prev, userMessage]);
    const currentInput = inputText.trim();
    setInputText('');
    setIsLoading(true);

    try {
      const startTime = Date.now();

      // 1. Detect emotion
      const emotions = await EmotionTrackingService.analyzeEmotion(currentInput, userId);
      const primaryEmotion = emotions[0];
      setCurrentEmotion(primaryEmotion.emotion);

      // 2. Track in analytics
      await ConversationAnalyticsService.trackMessage(
        sessionId,
        'user',
        currentInput,
        {
          topic: 'conversation',
          emotion: primaryEmotion.emotion,
        }
      );

      // 3. Build knowledge graph
      await KnowledgeGraphService.processText(userId, currentInput);

      // 4. Check for interruption
      const previousMessages = messages.slice(-5).map(m => ({
        role: m.role,
        content: m.content,
      }));
      const interruption = InterruptionHandlerService.detectInterruption(
        userId,
        currentInput,
        'current_topic',
        previousMessages
      );

      // 5. Get compressed context for long conversations
      let context = {};
      if (messages.length > 20) {
        const messagesToCompress = messages.map(m => ({
          role: m.role,
          content: m.content,
          timestamp: m.timestamp,
        }));
        const compressed = await ContextCompressionService.compressConversation(
          messagesToCompress
        );
        context = { compressed: compressed.summary, keyPoints: compressed.keyPoints };
      }

      // 6. Get AI response
      const response = await MasterAIService.chatWithMetadata(userId, currentInput, {
        conversationLength: messages.length,
        isFollowUp: messages.length > 1,
        currentEmotion: primaryEmotion.emotion,
        ...context,
      });

      // 7. Adapt response difficulty
      const adaptedResponse = await AdaptiveDifficultyService.adaptContent(
        userId,
        response.text,
        'general'
      );

      const responseTime = Date.now() - startTime;

      // 8. Create placeholder for streaming
      const placeholderMessage: Message = {
        id: (Date.now() + 1).toString(),
        role: 'assistant',
        content: '',
        timestamp: Date.now(),
        sources: response.sources,
        confidence: response.confidence,
        emotion: primaryEmotion.emotion,
        emotionIntensity: primaryEmotion.intensity,
        responseTime,
        isStreaming: true,
      };

      setMessages(prev => [...prev, placeholderMessage]);

      // 9. Stream response
      let streamedText = '';
      for await (const chunk of StreamingResponseService.streamResponse(adaptedResponse)) {
        streamedText = chunk;
        setMessages(prev => {
          const updated = [...prev];
          const lastMessage = updated[updated.length - 1];
          if (lastMessage.id === placeholderMessage.id) {
            lastMessage.content = chunk;
            lastMessage.isStreaming = true;
          }
          return updated;
        });
      }

      // 10. Mark streaming complete
      setMessages(prev => {
        const updated = [...prev];
        const lastMessage = updated[updated.length - 1];
        if (lastMessage.id === placeholderMessage.id) {
          lastMessage.isStreaming = false;
        }
        return updated;
      });

      // 11. Track AI response
      await ConversationAnalyticsService.trackMessage(
        sessionId,
        'assistant',
        streamedText,
        { responseTime }
      );

      // 12. Add to knowledge base
      await PersonalizedKnowledgeBaseService.addKnowledge(
        userId,
        `User asked: ${currentInput}`,
        'memory',
        'stated',
        0.8
      );

      // 13. Check for active plan
      const activePlans = MultiTurnPlanningService.getActivePlans(userId);
      if (activePlans.length > 0) {
        setActivePlan(activePlans[0]);
      }

    } catch (err) {
      console.error('Chat error:', err);
      const errorMessage: Message = {
        id: (Date.now() + 1).toString(),
        role: 'assistant',
        content: "I'm having trouble processing that. Could you try rephrasing?",
        timestamp: Date.now(),
      };
      setMessages(prev => [...prev, errorMessage]);
    } finally {
      setIsLoading(false);
    }
  };

  // Voice input
  const handleVoiceInput = async () => {
    const voiceAvailable = VoiceIntegrationService.isAvailable();
    
    if (!voiceAvailable.speechToText) {
      Alert.alert('Voice Not Available', 'Voice recognition is not available on this device.');
      return;
    }

    setIsListening(true);
    try {
      await VoiceIntegrationService.startListening(
        (transcribedText) => {
          setInputText(transcribedText);
          setIsListening(false);
        },
        (error) => {
          console.error('[Voice] Error:', error);
          setIsListening(false);
        },
        'en-US'
      );
    } catch (err) {
      console.error('Voice error:', err);
      setIsListening(false);
    }
  };

  // Show insights modal
  const handleShowInsights = async () => {
    setShowInsights(true);
  };

  // Welcome message
  useEffect(() => {
    if (messages.length === 0) {
      const hour = new Date().getHours();
      let greeting = 'Hey there!';
      
      if (hour >= 5 && hour < 12) greeting = 'Good morning!';
      else if (hour >= 12 && hour < 17) greeting = 'Good afternoon!';
      else if (hour >= 17 && hour < 22) greeting = 'Good evening!';

      const welcomeMessage: Message = {
        id: 'welcome',
        role: 'assistant',
        content: `${greeting} üëã\n\nI'm MOTTO - your intelligent AI companion. I understand emotions, learn from our conversations, and adapt to your style.\n\nWhat would you like to talk about?`,
        timestamp: Date.now(),
      };
      setMessages([welcomeMessage]);
    }
  }, []);

  return (
    <KeyboardAvoidingView
      style={styles.container}
      behavior={Platform.OS === 'ios' ? 'padding' : 'height'}
      keyboardVerticalOffset={Platform.OS === 'ios' ? 90 : 0}
    >
      {/* Modern Header with Gradient */}
      <LinearGradient
        colors={modernTheme.gradients.primary}
        start={{ x: 0, y: 0 }}
        end={{ x: 1, y: 0 }}
        style={styles.header}
      >
        <View style={styles.headerContent}>
          <View style={styles.headerLeft}>
            <Animated.View style={{ transform: [{ scale: pulseAnim }] }}>
              <Text style={styles.logo}>üí≠</Text>
            </Animated.View>
            <View>
              <Text style={styles.headerTitle}>MOTTO</Text>
              <Text style={styles.headerSubtitle}>
                {currentEmotion && getEmotionEmoji(currentEmotion)} Enhanced AI
              </Text>
            </View>
          </View>
          
          <View style={styles.headerRight}>
            <TouchableOpacity
              style={styles.iconButton}
              onPress={handleShowInsights}
            >
              <Text style={styles.iconText}>üìä</Text>
            </TouchableOpacity>
            
            {onOpenPersonalization && (
              <TouchableOpacity
                style={styles.iconButton}
                onPress={onOpenPersonalization}
              >
                <Text style={styles.iconText}>üë§</Text>
              </TouchableOpacity>
            )}
            
            {onOpenSettings && (
              <TouchableOpacity
                style={styles.iconButton}
                onPress={onOpenSettings}
              >
                <Text style={styles.iconText}>‚öôÔ∏è</Text>
              </TouchableOpacity>
            )}
          </View>
        </View>

        {/* Active Plan Indicator */}
        {activePlan && (
          <View style={styles.planIndicator}>
            <Text style={styles.planText}>
              üéØ {activePlan.goalDescription} ({activePlan.progress}%)
            </Text>
          </View>
        )}
      </LinearGradient>

      {/* Messages */}
      <ScrollView
        ref={scrollViewRef}
        style={styles.messagesContainer}
        contentContainerStyle={styles.messagesContent}
        showsVerticalScrollIndicator={false}
      >
        <Animated.View style={{ opacity: fadeAnim }}>
          {messages.map((message) => (
            <EnhancedMessageBubble
              key={message.id}
              message={message}
              isUser={message.role === 'user'}
            />
          ))}

          {/* Loading Indicator */}
          {isLoading && (
            <View style={styles.loadingContainer}>
              <View style={styles.loadingBubble}>
                <Animated.View style={{ transform: [{ scale: pulseAnim }] }}>
                  <Text style={styles.loadingEmoji}>ü§î</Text>
                </Animated.View>
                <Text style={styles.loadingText}>Thinking...</Text>
              </View>
            </View>
          )}
        </Animated.View>
      </ScrollView>

      {/* Modern Input Area with Glassmorphism */}
      <View style={styles.inputContainer}>
        <View style={styles.inputWrapper}>
          {/* Voice Button */}
          <TouchableOpacity
            style={[
              styles.voiceButton,
              isListening && styles.voiceButtonActive,
            ]}
            onPress={handleVoiceInput}
            disabled={isLoading}
          >
            <LinearGradient
              colors={isListening ? ['#EF4444', '#DC2626'] : modernTheme.gradients.accent}
              style={styles.voiceGradient}
            >
              <Text style={styles.voiceIcon}>
                {isListening ? 'üî¥' : 'üé§'}
              </Text>
            </LinearGradient>
          </TouchableOpacity>

          {/* Input Field */}
          <View style={styles.inputField}>
            <TextInput
              ref={inputRef}
              style={styles.input}
              value={inputText}
              onChangeText={setInputText}
              placeholder="Type your message..."
              placeholderTextColor={modernTheme.colors.gray[400]}
              multiline
              maxLength={2000}
              editable={!isLoading}
            />
          </View>
          
          {/* Send Button */}
          <TouchableOpacity
            style={styles.sendButton}
            onPress={handleSend}
            disabled={!inputText.trim() || isLoading}
          >
            <LinearGradient
              colors={
                !inputText.trim() || isLoading
                  ? [modernTheme.colors.gray[300], modernTheme.colors.gray[400]]
                  : modernTheme.gradients.primary
              }
              style={styles.sendGradient}
            >
              <Text style={styles.sendIcon}>
                {isLoading ? '‚è≥' : 'üöÄ'}
              </Text>
            </LinearGradient>
          </TouchableOpacity>
        </View>

        {/* Quick Info Bar */}
        <View style={styles.quickInfo}>
          <Text style={styles.quickInfoText}>
            ‚ú® Streaming ‚Ä¢ üòä Emotion-aware ‚Ä¢ üß† Learning
          </Text>
        </View>
      </View>

      {/* Insights Panel (can be expanded) */}
      {showInsights && (
        <InsightsPanel
          userId={userId}
          sessionId={sessionId}
          onClose={() => setShowInsights(false)}
        />
      )}
    </KeyboardAvoidingView>
  );
};

// Enhanced Message Bubble with Emotions
const EnhancedMessageBubble: React.FC<{ message: Message; isUser: boolean }> = ({
  message,
  isUser,
}) => {
  const [showDetails, setShowDetails] = useState(false);

  return (
    <View style={[styles.messageBubbleContainer, isUser && styles.messageBubbleContainerUser]}>
      <TouchableOpacity
        style={[
          styles.messageBubble,
          isUser ? styles.messageBubbleUser : styles.messageBubbleAssistant,
        ]}
        onLongPress={() => setShowDetails(!showDetails)}
        activeOpacity={0.8}
      >
        {isUser ? (
          <View style={styles.userBubble}>
            <Text style={styles.messageTextUser}>{message.content}</Text>
          </View>
        ) : (
          <LinearGradient
            colors={['#FFFFFF', '#F8FAFC']}
            style={styles.assistantBubble}
          >
            <Text style={styles.messageTextAssistant}>{message.content}</Text>

            {/* Emotion Indicator */}
            {message.emotion && (
              <View style={styles.emotionIndicator}>
                <Text style={styles.emotionText}>
                  {getEmotionEmoji(message.emotion)}
                </Text>
              </View>
            )}
          </LinearGradient>
        )}

        {/* Metadata */}
        {!isUser && showDetails && (
          <View style={styles.messageMetadata}>
            {message.sources && message.sources.length > 0 && (
              <Text style={styles.sourcesText}>
                üìö {message.sources.slice(0, 2).join(', ')}
              </Text>
            )}
            {message.confidence && (
              <Text style={styles.metadataText}>
                üéØ {message.confidence}% confidence
              </Text>
            )}
            {message.responseTime && (
              <Text style={styles.metadataText}>
                ‚ö° {(message.responseTime / 1000).toFixed(1)}s
              </Text>
            )}
          </View>
        )}

        {/* Timestamp */}
        <Text style={[styles.timestamp, isUser && styles.timestampUser]}>
          {new Date(message.timestamp).toLocaleTimeString([], {
            hour: '2-digit',
            minute: '2-digit',
          })}
        </Text>
      </TouchableOpacity>
    </View>
  );
};

// Insights Panel Component
const InsightsPanel: React.FC<{ userId: string; sessionId: string; onClose: () => void }> = ({
  userId,
  sessionId,
  onClose,
}) => {
  const [insights, setInsights] = useState<any>(null);

  useEffect(() => {
    loadInsights();
  }, []);

  const loadInsights = async () => {
    const analytics = await ConversationAnalyticsService.getMetrics(userId);
    const emotions = await EmotionTrackingService.getEmotionalInsights(userId);
    const knowledge = KnowledgeGraphService.getInsights(userId);

    setInsights({ analytics, emotions, knowledge });
  };

  return (
    <View style={styles.insightsOverlay}>
      <View style={styles.insightsPanel}>
        <View style={styles.insightsHeader}>
          <Text style={styles.insightsTitle}>üìä Your AI Insights</Text>
          <TouchableOpacity onPress={onClose}>
            <Text style={styles.closeButton}>‚úï</Text>
          </TouchableOpacity>
        </View>

        <ScrollView style={styles.insightsContent}>
          {insights && (
            <>
              <Text style={styles.insightSection}>üìà Analytics</Text>
              <Text style={styles.insightText}>
                Total Conversations: {insights.analytics.totalConversations}
              </Text>
              <Text style={styles.insightText}>
                Avg Response Time: {(insights.analytics.averageResponseTime / 1000).toFixed(1)}s
              </Text>

              <Text style={styles.insightSection}>üòä Emotions</Text>
              <Text style={styles.insightText}>{insights.emotions.summary}</Text>

              {insights.knowledge && (
                <>
                  <Text style={styles.insightSection}>üß† Knowledge</Text>
                  {insights.knowledge.expertiseAreas.slice(0, 3).map((area: any, i: number) => (
                    <Text key={i} style={styles.insightText}>
                      {area.topic}: Level {area.level}/100
                    </Text>
                  ))}
                </>
              )}
            </>
          )}
        </ScrollView>
      </View>
    </View>
  );
};

// Helper function
const getEmotionEmoji = (emotion: string): string => {
  const emojiMap: Record<string, string> = {
    joy: 'üòä',
    sadness: 'üò¢',
    anger: 'üò†',
    fear: 'üò∞',
    surprise: 'üòÆ',
    love: '‚ù§Ô∏è',
    anxiety: 'üòü',
    excitement: 'üéâ',
    frustration: 'üò§',
    confidence: 'üí™',
    neutral: 'üòê',
  };
  return emojiMap[emotion] || 'üòê';
};

