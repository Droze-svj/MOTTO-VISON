require_relative '../node_modules/react-native/scripts/react_native_pods.rb'

project 'MOTTOVISON.xcodeproj'

platform :ios, '15.1'

prepare_react_native_project!

target 'MOTTOVISON' do
  # Autolink native modules (e.g., @react-native-async-storage/async-storage)
  config = use_native_modules!

  use_react_native!(
    :path => '../node_modules/react-native',
    :hermes_enabled => true,
    :fabric_enabled => false
  )

  # Firebase App Distribution - Using CLI-only method (no SDK needed)
  # Removed Firebase pods to avoid iCloud sync issues
  # Upload via: ./scripts/upload-to-firebase.sh

  post_install do |installer|
    react_native_post_install(
      installer,
      '../node_modules/react-native',
      :mac_catalyst_enabled => false
    )
  end
end
